<div class="container mt-4">
  <h1>Game Result</h1>

  <% if @word.present? %>
    <p>You submitted: <strong><%= @word %></strong></p>
  <% end %>

  <% if @result.present? %>
    <p><%= @result %></p>
  <% end %>

  <p>Your total score: <strong><%= @total_score %></strong></p>

  <%= link_to 'Try again', new_path, class: 'btn btn-primary' %>
  <%= link_to 'Reset Score', reset_path, class: 'btn btn-danger' %>
</div>
